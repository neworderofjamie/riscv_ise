{
    "configurations": [
    {
        "name": "Launch project",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/${input:example}_debug",
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/bin",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            { "text": "-enable-pretty-printing", "description": "enable pretty printing", "ignoreFailures": true },
        ]
    },
    {
        "name": "Launch python",
        "type": "cppdbg",
        "request": "launch",
        "program": "${userHome}/virtualenv/genn_5/bin/python",
        "args": ["${file}"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            { "text": "-enable-pretty-printing", "description": "enable pretty printing", "ignoreFailures": true },
        ]
    }

    ],
    "inputs": [
    {
      "type": "pickString",
      "id": "example",
      "description": "What example do you want to debug?",
      "options": [
        "alif",
        "blank",
        "compiler_test",
        "decay",
        "dma_test_fenn",
        "dump_coe",
        "init_vram",
        "lane_local_test",
        "lif",
        "mnist",
        "poisson",
        "shd",
        "sparse_spike",
        "spike_dma",
        "special_function_test",
        "va_benchmark"
      ],
      "default": "lif"
    }
  ]
}
